{
    "manifest_version": 2,
    "name": "Wikipedia Search",
    "version": "1.0",
    "description": "Adds a dropdown search bar for Wikipedia",
    "icons": {
      "48": "icons/border-48.png"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/",
        "https://*/",
        "https://*.wikipedia.org/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
  }
  
  